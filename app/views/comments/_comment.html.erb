<!-- app/views/comments/_comment.html.erb -->
<div id="comment-<%= comment.id %>" class="comment">
    <strong><%= comment.user.username %>:</strong>
    <%= comment.content %>
    <small>Posted at<%= time_ago_in_words(comment.created_at) %> ago</small>
    <div>
      <p>
        <%= button_to 'Delete Comment', [comment.post, comment], method: :delete %>
      </p>
    </div>
  </div>